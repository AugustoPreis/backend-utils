	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "./build",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"emitDeclarationOnly": false
	},
	"exclude": [
		"**/__tests__/**",
		"node_modules"
	]
}